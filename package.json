{
	"name": "express-server",
	"version": "21.12.17",
	"description": "Node.js express http/https server",
	"main": "server.js",
	"scripts": {
		"start": "sudo \"$(which node)\" ./src/server.js",
		"start:dev": "dev.bat",
		"start:prod": "pm2 start src/server.js --name \"express-server\" && npm run logs",
		"start:nodemon": "nodemon --ignore public/data/ src/server.js",
		"update:prod": "git reset --hard && git pull $GIT_URL && npm i && npm audit fix && pm2 flush && pm2 restart hds-server && clear && npm run logs",
		"sass": "sass --no-source-map --watch public/styles/scss:public/styles/css",
		"logs": "pm2 logs express-server --raw"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Iconejey/express-server.git"
	},
	"keywords": [
		"node",
		"web",
		"http",
		"https",
		"express",
		"server"
	],
	"author": "Nicolas Gouwy",
	"license": "UNLICENCED",
	"bugs": {
		"url": "https://github.com/Iconejey/express-server/issues"
	},
	"homepage": "https://github.com/Iconejey/express-server#readme",
	"dependencies": {
		"compression": "^1.7.4",
		"dotenv": "^10.0.0",
		"express": "^4.17.1",
		"express-fileupload": "^1.2.1",
		"express-useragent": "^1.0.15",
		"image-data-uri": "^1.0.0",
		"ip": "^1.1.5",
		"nodemon": "^2.0.7"
	}
}
